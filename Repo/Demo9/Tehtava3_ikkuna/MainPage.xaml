        <TextBox x:Name="Ikkunapintaala" HorizontalAlignment="Left" Height="24" Margin="894,448,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178"/>
        <TextBox x:Name="Lasinpintaala" HorizontalAlignment="Left" Height="24" Margin="894,528,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178"/>
        <TextBox x:Name="Karminpiiri" HorizontalAlignment="Left" Height="24" Margin="894,593,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178"/>

